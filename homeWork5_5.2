            for (int i = 0; i < result.Length; i++)
            {
                for (int j = i + 1; j < result.Length; j++)
                {

                    if (result[i] == result[j])
                    {                      
                        result[j] = 0;
                    }
                }
            }
           
            
            Console.WriteLine();

            for (int i = 0; i < result.Length; i++)
            {
                if (result[i] == 0)
                {
                    tempNumber++;
                }

                else
                {
                    result[i - tempNumber] = result[i];
                }
                Console.Write(result[i] + " ");
            }

            Array.Resize(ref result, result.Length - tempNumber);
            Console.WriteLine();
            for (int i = 0; i < result.Length; i++)
            {
                Console.Write(result[i] + " ");
            }
