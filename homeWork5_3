using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homeWork5_3
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Вы вводите числа, программа их запоминает до тех пор пока не будет введено контрольное слово " + "\n" + "sum или exit. ");
            Console.WriteLine("Введите число, sum или exit: ");

            List<int> numbers = new List<int>();
            string message = "";           
            while (message != "exit")
            {
               message = Console.ReadLine();

                if (message == "exit")
                {
                    CompletionOfWork();
                }                

                if (message != "sum" && message != "exit")
                {
                    AddingElement(ref numbers, message);
                }           

                if (message == "sum")
                {
                    AddingAllNumbers(ref numbers);
                }
            }
        }

        static void AddingElement(ref List<int> numbers, string message)
        {
            int number;
            bool isThatANumber = int.TryParse(message, out number);
            numbers.Add(number);

            if (isThatANumber == false)
            {
                Console.WriteLine("Не могу конвертировать");
            }
        }

        static void CompletionOfWork()
        {
            Console.WriteLine("Работа программы завершена!");
        }

        static void AddingAllNumbers(ref List<int> numbers)
        {
            int amount = 0;
            for (int i = 0; i < numbers.Count; i++)
            {
                amount += numbers[i];                
            }
            Console.WriteLine("Сумма чисел равна = " + amount);
        }
    }
}
