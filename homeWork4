using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homeWork7
{
    class Program
    {
        static void Main(string[] args)
        {
            int waitingTime = 10;
            int peoples;
            int qieueTime;
            int hours;
            int minutes;
            int hoursTime;
            int minutesTime;
            Console.Write(" Какое кол-во человек перед вами в очереди: ");
            peoples = Convert.ToInt32(Console.ReadLine());
            qieueTime = peoples * waitingTime;
            hoursTime = qieueTime / 60;
            minutesTime = qieueTime % 60;
            Console.WriteLine(" Ваше время ожидания составит: " + hoursTime +
            " часа " + minutesTime + " минут ");
            
        }
    }
}
