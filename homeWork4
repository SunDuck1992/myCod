using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homeStudy4
{
    class Program
    {
        static void Main(string[] args)
        {
            int pictures = 52;
            int numberOfPicturesInRow = 3;
            int filledRows = pictures / numberOfPicturesInRow;
            int remains = pictures % numberOfPicturesInRow;

            Console.WriteLine("Имея " + pictures + " картинки и выводя по " + numberOfPicturesInRow +  " в ряд, мы в итоге получим: " +
                filledRows + " рядов и " + remains + " картинка уйдет в остаток ");
        }
    }
}
