using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homeWork5_4._1
{
    class Program
    {
        public const string CaseOne = "1";
        public const string CaseTwo = "2";
        public const string CaseThree = "3";
        static void Main(string[] args)
        {
            Console.WriteLine("Программа запоминает внесенные в нее данные. ФИО человека и должность. После чего может сделать вывод на экран.");
            Console.WriteLine("Архив досье." + "\n" + "Меню Архива: " + "\n" + "1 - ввод ФИО человека и должности" + "\n" + "2 - вывод всех досье на экран" +
                "\n" + "3 - удалить досье" + "\n" + "Для выхода из программы введите Exit");
            Dictionary<string, string> dataBaseOfWorkers = new Dictionary<string, string>();
            string message = "";
            string stopWord = "Exit";
            Console.WriteLine();            

            while (message != stopWord)
            {
                message = Console.ReadLine();

                switch (message)
                {
                    case CaseOne:
                        AddPeople(dataBaseOfWorkers);
                        break;

                    case CaseTwo:
                        ShowPeople(dataBaseOfWorkers);
                        break;

                    case CaseThree:
                        RemoveAt(dataBaseOfWorkers);
                        break;
                }
            }
        }

        static void AddPeople(Dictionary<string, string> dataBaseOfWorkers)
        {
            Console.WriteLine("Введите ФИО работника:");
            string initialsPeople = Console.ReadLine();
            Console.WriteLine("Введите должность человека:");
            string postOfPeople = Console.ReadLine();
            
                if (dataBaseOfWorkers.ContainsKey(initialsPeople) == false)
                {
                    dataBaseOfWorkers.Add(initialsPeople, postOfPeople);
                }

                else
                {
                    Console.WriteLine("Такой человек уже есть в базе данных.");
                }                               
        }

        static void ShowPeople(Dictionary<string, string> dataBaseOfWorkers)
        {
            foreach (var workers in dataBaseOfWorkers)
            {
                Console.WriteLine($"Работник - {workers.Key}, должность - {workers.Value}");
            }
            
            if (dataBaseOfWorkers.Count == 0)
            {
                Console.WriteLine("Картотека досье пуста!");
            }
        }

        static void RemoveAt(Dictionary<string, string> dataBaseOfWorkers)
        {
            Console.WriteLine("Введите ФИО работника, которого нужно удалить из архива:");
            string initialsPeople = Console.ReadLine();
            dataBaseOfWorkers.Remove(initialsPeople);
            Console.WriteLine("Сотрудник удален из базы данных.");
        }
    }
}
