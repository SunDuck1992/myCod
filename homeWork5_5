using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homeWork5_5._2
{
    class Program
    {
        static void Main(string[] args)
        {
            int arraySize = 10;
            int[] array1 = new int[arraySize];
            int[] array2 = new int[arraySize];
            List<int> numbers = new List<int>();

            FillTheArray(array1);
            FillTheArray(array2);

            ShowTheArray(array1);
            Console.Write(" - первый заполненный массив");
            Console.WriteLine();

            ShowTheArray(array2);
            Console.Write(" - второй заполненный массив");
            Console.WriteLine();

            numbers.AddRange(array1);
            numbers.AddRange(array2);
            ShowTheCollection(numbers);
            Console.Write(" - Объединенный лист");

            ReplacingIdentialElements(numbers);
            Console.WriteLine();
            ShowTheCollection(numbers);
            Console.Write(" - Удаление повторений");
            Console.WriteLine();
        }

        static void FillTheArray(int[] array)
        {
            Random random = new Random();

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(1, 9);
            }
        }

        static void ShowTheCollection(List<int> list)
        {
            for (int i = 0; i < list.Count; i++)
            {
                Console.Write(list[i] + " ");
            }
        }

        static void ShowTheArray(int[] array)
        {
            for (int i = 0; i < array.Length; i++)
            {
                Console.Write(array[i] + " ");
            }
        }

        static void ReplacingIdentialElements(List<int> numbers)
        {
            for (int i = 0; i < numbers.Count; i++)
            {
                for (int j = i + 1; j < numbers.Count; j++)
                {

                    if (numbers[i] == numbers[j])
                    {
                        numbers.RemoveAt(j);
                        j--;
                    }                   
                }
            }
        }
    }
}
