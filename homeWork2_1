using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homeWork2_1
{
    class Program
    {
        static void Main(string[] args)
        {
            string installedMessage;
            int numberOfRepetitions;
            
            Console.Write(" Введите ваше сообщение, которое хотите вывести: ");
            installedMessage = Console.ReadLine();
            Console.Write(" Введите жедаемое кол-во повторений: ");
            numberOfRepetitions = Convert.ToInt32(Console.ReadLine());

            while (numberOfRepetitions -- > 0)
            {
                Console.WriteLine(installedMessage);
            }    
        }
    }
}
